<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>
        <title>Your Profile</title>
    </head>
<body class="bg-gradient-to-br from-zinc-900 via-blue-950 to-purple-900 text-white min-h-screen flex flex-col items-center py-10">

    <!-- Header -->
    <div class="flex flex-col items-center mb-12 space-y-2">
        <h3 class="text-5xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 drop-shadow-xl animate-fade-in">
            Hello, <%= user.name %> <span aria-label="wave" class="animate-wave">üëã</span>
        </h3>
        <h5 class="text-xl font-medium text-zinc-300 border-l-4 border-blue-500 pl-4 mt-2 animate-fade-in-up">
            You can create a post
        </h5>
    </div>

    <!-- Create Post Form -->
    <form method="POST" action="/post"
        class="w-full max-w-2xl flex flex-col gap-6 bg-zinc-800/80 rounded-3xl shadow-2xl border border-blue-800 p-10 backdrop-blur-md animate-fade-in-up">
        <div class="flex items-center gap-4 mb-4">
            <!-- User Avatar with Status -->
            <div class="relative w-12 h-12">
                <div class="w-12 h-12 rounded-full bg-gradient-to-tr from-blue-400 via-purple-500 to-pink-500 flex items-center justify-center text-2xl font-bold shadow-lg border-2 border-zinc-700">
                    <% if (user.avatarUrl) { %>
                        <img src="<%= user.avatarUrl %>" alt="avatar" class="w-full h-full rounded-full object-cover" />
                    <% } else { %>
                        <span><%= user.name.charAt(0).toUpperCase() %></span>
                    <% } %>
                </div>
                <span class="absolute bottom-1 right-1 w-3 h-3 bg-green-400 border-2 border-zinc-900 rounded-full"></span>
            </div>
            <span class="font-semibold text-blue-400 text-lg">@<%= user.username %></span>
        </div>
        <div class="relative mt-2">
            <textarea id="postContent" name="content" rows="5"
                placeholder="Write something awesome..."
                class="peer w-full px-4 pt-7 pb-3 bg-zinc-700/80 rounded-xl resize-none border border-blue-500 focus:ring-2 focus:ring-blue-400 transition font-medium text-zinc-100 placeholder-zinc-400 shadow-inner"
                required></textarea>
            <label for="postContent"
                class="absolute left-4 top-2 text-blue-400 text-sm font-semibold pointer-events-none transition-all duration-200 peer-focus:text-purple-400 peer-focus:top-2 peer-valid:top-2">
                Type Post ‚úçÔ∏è
            </label>
        </div>
        <div class="flex flex-wrap gap-4 justify-between items-center mt-3">
            <!-- Post Button -->
            <button type="submit"
                class="inline-flex items-center gap-2 px-7 py-3 font-semibold rounded-xl bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-white shadow-lg hover:scale-105 hover:shadow-pink-400/40 active:scale-95 transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-blue-400 ripple"
                aria-label="Send post">
                <span class="material-symbols-outlined text-xl">rocket_launch</span>
                Post
            </button>
            <!-- Feed Button -->
            <a href="/feed"
                class="inline-flex items-center gap-2 px-6 py-2.5 font-semibold rounded-xl bg-gradient-to-r from-blue-500 to-pink-500 text-white shadow-lg hover:scale-105 hover:shadow-pink-400/40 active:scale-95 transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-blue-400 ripple"
                aria-label="See all posts">
                <span class="material-symbols-outlined text-xl">list_alt</span>
                See all users' posts
            </a>
            <!-- Logout Button -->
            <a href="/logout"
                class="inline-flex items-center gap-2 px-6 py-2.5 font-semibold rounded-xl bg-gradient-to-r from-red-500 via-pink-500 to-red-700 text-white shadow-lg hover:scale-105 hover:bg-red-600 hover:shadow-red-500/40 active:scale-95 transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-red-400 ripple"
                aria-label="Logout">
                <span class="material-symbols-outlined text-xl">logout</span>
                Logout
            </a>
        </div>
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    </form>

    <!-- Posts Grid -->
    <div class="w-full max-w-5xl px-2 mt-14">
        <h3 class="text-2xl font-bold mb-7 border-b border-zinc-700 pb-2">Your Posts üìù</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% user.posts.reverse().forEach(function(post) { %>
            <div class="group bg-zinc-800/80 backdrop-blur-xl rounded-2xl shadow-2xl border border-zinc-700 p-7 flex flex-col gap-4 relative hover:scale-[1.02] hover:shadow-blue-800/40 transition-all duration-200">
                <!-- Floating Glow -->
                <div class="absolute -inset-1 rounded-2xl pointer-events-none opacity-0 group-hover:opacity-40 transition">
                    <div class="w-full h-full bg-gradient-to-r from-blue-700/20 via-purple-700/10 to-pink-700/20 blur-md rounded-2xl"></div>
                </div>
                <div class="flex items-center gap-3">
                    <div class="w-9 h-9 rounded-full bg-gradient-to-tr from-blue-400 via-purple-500 to-pink-500 flex items-center justify-center text-lg font-bold shadow border-2 border-zinc-700">
                        <% if (user.avatarUrl) { %>
                            <img src="<%= user.avatarUrl %>" alt="avatar" class="w-full h-full rounded-full object-cover" />
                        <% } else { %>
                            <span><%= user.name.charAt(0).toUpperCase() %></span>
                        <% } %>
                    </div>
                    <span class="font-semibold text-blue-400 text-base">@<%= user.username %></span>
                </div>
                <p class="text-zinc-200 leading-relaxed tracking-wide text-lg select-text">
                    <%= post.content %>
                </p>
                <% if (post.createdAt) { %>
                <div class="text-xs text-zinc-400 mt-1 font-mono">
                    Posted: <%= post.createdAt.toLocaleString('en-US', { month: 'short', day: 'numeric', year: '2-digit', hour:'2-digit', minute:'2-digit' }) %>
                </div>
                <% } %>
                <div class="flex items-center gap-4 mt-2">
                    <small class="text-pink-400 text-sm font-semibold tracking-wide inline-block">
                        <span class="material-symbols-outlined text-base align-middle animate-pulse">favorite</span>
                        <%= post.likes ? post.likes.length : 0 %> Likes
                    </small>
                </div>
                <div class="flex gap-4 mt-4">
                    <form method="POST" action="/like/<%= post._id %>">
                        <button type="submit"
                            class="flex items-center gap-2 px-4 py-2 bg-zinc-700 text-pink-400 border border-zinc-600 rounded-xl hover:text-pink-500 hover:border-pink-500 transition font-semibold ripple"
                            aria-label="Like post" title="Like">
                            <span class="material-symbols-outlined text-base">favorite</span>
                            Like
                        </button>
                    </form>
                    <a href="/edit/<%= post._id %>"
                        class="flex items-center gap-2 px-4 py-2 bg-zinc-700 text-blue-400 border border-zinc-600 rounded-xl hover:text-blue-500 hover:border-blue-500 transition font-semibold ripple"
                        aria-label="Edit post" title="Edit">
                        <span class="material-symbols-outlined text-base">edit</span>
                        Edit
                    </a>
                    <form method="POST" action="/delete/<%= post._id %>">
                        <button type="submit"
                            class="flex items-center gap-2 px-4 py-2 bg-red-600 text-white font-semibold rounded-xl border border-red-700 hover:bg-red-700 transition ripple"
                            aria-label="Delete post" title="Delete">
                            <span class="material-symbols-outlined text-base">delete</span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Ripple effect for buttons (add to your JS) -->
    <script>
    document.querySelectorAll('.ripple').forEach(btn => {
        btn.addEventListener('click', function(e) {
            const circle = document.createElement('span');
            circle.classList.add('absolute','rounded-full','bg-white','opacity-20','pointer-events-none');
            const rect = btn.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            circle.style.width = circle.style.height = size + 'px';
            circle.style.left = (e.clientX - rect.left - size/2) + 'px';
            circle.style.top = (e.clientY - rect.top - size/2) + 'px';
            circle.style.transition = 'opacity 0.6s, transform 0.6s';
            circle.style.position = 'absolute';
            btn.appendChild(circle);
            setTimeout(() => circle.remove(), 600);
        });
    });
    </script>
    <!-- Animate fade-in utility -->
    <style>
    @keyframes fade-in { from { opacity: 0; transform: translateY(24px);} to { opacity: 1; transform: none;} }
    .animate-fade-in { animation: fade-in 0.7s cubic-bezier(.39,.58,.57,1) both;}
    @keyframes fade-in-up { from { opacity: 0; transform: translateY(44px);} to { opacity: 1; transform: none;} }
    .animate-fade-in-up { animation: fade-in-up 0.8s cubic-bezier(.39,.58,.57,1) both;}
    @keyframes wave { 0%,100%{transform:rotate(0deg);} 20%,60%{transform:rotate(-20deg);} 40%,80%{transform:rotate(15deg);} }
    .animate-wave { animation: wave 1.2s infinite;}
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

</body>

</html>
