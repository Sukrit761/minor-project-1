    <!-- Like button AJAX (optional, for instant UI feedback) -->
    <script>
    document.querySelectorAll('.like-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
            const postId = btn.dataset.postId;
            btn.disabled = true;
            const res = await fetch(`/like/${postId}`, { method: 'POST' });
            if (res.ok) {
                let countSpan = btn.querySelector('span:last-child');
                countSpan.textContent = Number(countSpan.textContent) + 1;
                btn.classList.add('bg-pink-600/30');
                setTimeout(() => btn.classList.remove('bg-pink-600/30'), 800);
            }
            btn.disabled = false;
        });
    });
    </script>
