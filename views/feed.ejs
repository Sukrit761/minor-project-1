    <body class="bg-gradient-to-br from-zinc-900 via-blue-950 to-purple-900 text-white min-h-screen p-4 font-sans">

    <header class="mb-12 flex flex-col items-center">
        <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 mb-2 drop-shadow-lg">
            üöÄ Community Feed
        </h1>
        <p class="text-zinc-400 max-w-xl text-center mt-3">Welcome to the community! Share thoughts, like posts, and connect with others.</p>
    </header>

    <div class="space-y-10 max-w-2xl mx-auto">
        <% posts.forEach(function(post) { %>
            <div class="bg-zinc-800/70 backdrop-blur-md p-7 rounded-2xl shadow-2xl border border-zinc-700 space-y-6 hover:scale-[1.015] transition-all duration-200 hover:shadow-blue-800/30 group relative">
                <!-- Floating subtle gradient glow -->
                <div class="absolute -inset-1 rounded-2xl pointer-events-none opacity-0 group-hover:opacity-60 transition">
                    <div class="w-full h-full bg-gradient-to-r from-blue-700/20 via-purple-700/15 to-pink-700/20 blur-lg rounded-2xl"></div>
                </div>
                
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-3">
                        <!-- User Avatar -->
                        <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-400 via-purple-500 to-pink-500 flex items-center justify-center text-lg font-bold shadow-lg border-2 border-zinc-700">
                            <% if (post.user && post.user.avatarUrl) { %>
                                <img src="<%= post.user.avatarUrl %>" alt="avatar" class="w-full h-full rounded-full object-cover" />
                            <% } else { %>
                                <span><%= post.user ? post.user.username.charAt(0).toUpperCase() : "U" %></span>
                            <% } %>
                        </div>
                        <h5 class="text-blue-400 font-semibold text-lg hover:underline">
                            @<%= post.user ? post.user.username : "Unknown" %>
                        </h5>
                    </div>
                    <% if (post.createdAt) { %>
                        <span class="text-xs text-zinc-500">
                            <%= new Date(post.createdAt).toLocaleString('en-US', { month: 'short', day: 'numeric', hour: '2-digit', minute:'2-digit' }) %>
                        </span>
                    <% } %>
                </div>

                <p class="text-zinc-200 leading-relaxed tracking-wide text-lg select-text">
                    <%= post.content %>
                </p>
<div class="space-y-2">
    <% if (post.comments && post.comments.length > 0) { %>
        <% post.comments.forEach(function(comment) { %>
            <div class="bg-zinc-700 p-3 rounded-md text-sm text-zinc-300 flex justify-between items-center">
                <div>
                    <span class="font-bold text-blue-400">
                        @<%= comment.user?.username || 'User' %>:
                    </span>
                    <%= comment.content %>
                    <div class="text-xs text-zinc-500">
                        <%= new Date(comment.createdAt).toLocaleString() %>
                    </div>
                </div>

                <% if (comment.user && comment.user._id.toString() === user.userid.toString()) { %>
                    <div class="flex gap-2 ml-4">
                        <a href="/comment/edit/<%= comment._id %>" 
                           class="text-xs text-blue-400 hover:text-blue-500">‚úèÔ∏è Edit</a>

                        <form method="POST" action="/comment/delete/<%= comment._id %>">
                            <button type="submit"
                                class="text-xs text-red-400 hover:text-red-500">üóëÔ∏è Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% }) %>
    <% } %>
</div>



<!-- Comment Form -->
<form action="/feed/comment/<%= post._id %>" method="POST" class="flex gap-2 mt-2">
    <input name="comment" type="text" placeholder="Add a comment..." required
        class="flex-1 bg-zinc-800 border border-zinc-700 rounded-md px-3 py-1.5 text-sm text-white placeholder-zinc-500" />
    <button type="submit"
        class="px-4 py-1.5 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition text-sm">
        Comment
    </button>
</form>


               

                <div class="flex items-center justify-between mt-2">
                    <div class="flex items-center gap-2">
                        <button type="button"
                            class="like-btn flex items-center gap-1 px-3 py-1.5 rounded-lg border border-pink-500 bg-zinc-900 text-pink-400 font-semibold transition hover:bg-pink-600/10 hover:scale-110 active:scale-95"
                            data-post-id="<%= post._id %>">
                            <span class="inline-block animate-pulse">‚ù§Ô∏è</span>
                            <span><%= post.likes.length %></span>
                        </button>
                        <span class="text-xs text-zinc-400 font-mono">
                            <%= post.likes.length === 1 ? "Like" : "Likes" %>
                        </span>
                    </div>

                    <div class="flex gap-3">
                        <form method="POST" action="/feed/delete/<%= post._id %>">
                            <button type="submit"
                                class="flex items-center gap-1 px-3 py-1.5 bg-red-600 text-white rounded-lg border border-red-700 hover:bg-red-700 hover:scale-110 transition active:scale-95">
                                üóëÔ∏è Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

